@page "/auth/signup"
@model RegisterModel
@{
}
@{
    ViewData["Title"] = "Signup";
    string error = ViewData["error"] == null ? "" : ViewData["error"].ToString();
}
<section class="signup">
    <div class="signin-container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="signin-form-title">Sign up</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="POST" class="signin-register-form" id="register-form">
                    <div class="signin-form-group">
                        <label asp-for="Input.FirstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.FirstName" type="text" placeholder="Your First Name" />
                    </div>
                    <div class="signin-form-group">
                        <label asp-for="Input.LastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.LastName" type="text" placeholder="Your Last Name" />
                    </div>
                    <div class="signin-form-group">
                        <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Input.Email" type="email" id="email" placeholder="Your Email" />
                    </div>
                    <span class="text-danger" id="spPass"></span>
                    <div class="signin-form-group">
                        <label asp-for="Input.Password" id="lbPass"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Input.Password" type="password" id="pass" placeholder="Password" />
                    </div>
                    <div class="signin-form-group">
                        <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="Input.ConfirmPassword" type="password" id="re_pass"
                            placeholder="Repeat your password" />
                    </div>
                    <div class="signin-form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="signin-agree-term" />
                        <label for="agree-term" class="signin-label-agree-term"><span><span></span></span>I agree all
                            statements in <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="signin-form-group signin-form-button">
                        <input type="submit" name="signup" id="signup" class="signin-form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/images/auth/signup-image.jpg" alt="sing up image"></figure>
                <a href="/auth/signin" class="signup-image-link">I am already member</a>
                <div style="margin-left: 52px;">
                    <partial name="_ExternalLoginPartial"></partial>
                </div>
            </div>

        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    $(document).ready(function () {
        const inputPassword = $('#pass');
        const spPass = $('#spPass');

        inputPassword.on('input', () => {
            spPass.html('');
            const passValue = inputPassword.val();
            if (passValue.length < 8 || passValue.length > 16) {
                return;
            }
            if (!/[a-z]/.test(passValue)) {
                setTimeout(() => spPass.html("Password must contain at least 1 minuscule letter!"), 250)
                return;
            }
            if (!/[0-9]/.test(passValue)) {
                setTimeout(() => spPass.html("Password must contain at least 1 capital letter!"), 250)
                return;
            }
            if (!/[A-Z]/.test(passValue)) {
                setTimeout(() => spPass.html("Password must contain at least 1 capital letter!"), 250)
                return;
            }
            if (!/[-._@@+]/.test(passValue)) {
                setTimeout(() => spPass.html("Password must contain at least on of the following letter: -._@@+ "), 250)
                
                return;
            }
        });// Mã JavaScript của bạn ở đây
    });

</script>