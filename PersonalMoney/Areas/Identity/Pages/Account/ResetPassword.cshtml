@page "/auth/reset-password"
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="signin-row">
    <div class="signin-col-md-4">
        <section class="sign-in">
            <div class="signin-container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="~/images/auth/forgot-password.jpg" alt="sing up image"></figure>

                    </div>

                    <div class="signin-form">
                        <h2 class="signin-form-title ">Reset password</h2>

                        <form method="post" class="register-form" id="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Input.Code" type="hidden" />
                            <div class="signin-form-group">
                                <span class="text-danger" asp-validation-for="Input.Email"></span>
                                <label asp-for="Input.Email"><i
                                        class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="Input.Email" placeholder="Your Email" autocomplete="username"
                                    aria-required="true" />
                            </div>
                            <div class="signin-form-group">
                                <span class="text-danger" asp-validation-for="Input.Password"></span>
                                <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Input.Password" placeholder="New password" autocomplete="new-password"
                                    aria-required="true" />

                            </div>
                            <div class="signin-form-group">
                                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
                                <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Input.ConfirmPassword" placeholder="Confirm new password"
                                    autocomplete="new-password" aria-required="true" />
                            </div>

                            <div class="signin-form-group signin-form-button">
                                <input type="submit" class="signin-form-submit" value="Reset ">
                            </div>


                        </form>
                        <div class="mt-40-px">
                            <a href="/auth/signin" class="signin-link-left-dark signin-text-start signin-mt-5">Already
                                have an account?</a>
                            <div class="signin-social-forgot">

                               <partial name="_ExternalLoginPartial"></partial>
                            </div>
                        </div>
                    </div>

                </div>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
