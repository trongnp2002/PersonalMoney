@page "/auth/forgot-password"
@model ForgotPasswordModel
@{

}

<div class="signin-row">
    <div class="signin-col-md-4">
        <section class="sign-in">
            <div class="signin-container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="~/images/auth/forgot-password.jpg" alt="sing up image"></figure>

                    </div>

                    <div class="signin-form">
                        <h3 class="signin-form-title ">Forgot Password</h2>
                        <form method="POST" class="register-form" id="login-form">
                            <div class="signin-form-group">
                                <label asp-for="Input.Email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="Input.Email" placeholder="Your email" autocomplete="username" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                            <div class="signin-form-group signin-form-button">
                                <input type="submit" class="signin-form-submit" value="Reset Password">
                            </div>
                      

                        </form>
                        <div class="mt-40-px">
                            <a href="/auth/signin" class="signin-link-left-dark signin-text-start signin-mt-5">Already have an account?</a>
                            <div class="signin-social-forgot">

                              <span class="signin-social-label">Or login with</span>
                            <partial name="_ExternalLoginPartial"></partial>

                            </div>
                        </div>
                    </div>

                </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
