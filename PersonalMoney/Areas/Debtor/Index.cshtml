                                                <a asp-action="Edite" asp-route-id="@item.Id"><i class="zmdi zmdi-edit"></i>Edit</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"> <i class="zmdi zmdi-delete"></i>Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
