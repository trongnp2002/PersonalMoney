@page "/debtor/delete/{id:int}"
@model DeleteModel
@using PersonalMoney.Pagesg

@{
    ViewData["Title"] = "Delete debtor";
    // Layout = "/Views/Shared/_LayoutAdmin.cshtml";

}


<p>Are you sure you want to delete this debtor?</p>
<h4>@Model.debtor.Name</h4>
<div>
    <form method="post">
        <input type="hidden" name="id" value="@Model.debtor.Id" />
