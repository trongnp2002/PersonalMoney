@page "/categories/delete/{id:int}"
@model PersonalMoney.Pages.Categories.DeleteModel
@using PersonalMoney.Models
@{
}
<div class="confirmation-container" style="margin: 50px auto 50px">
    <p>Are you sure you want to delete this Category?</p>
    <h4>@Model.DeleteCategory.Name</h4>
    <div class="btn-container">
        <form method="post">
            <input type="hidden" name="id" value="@Model.DeleteCategory.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="/ListCategory" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
