@page
@model PersonalMoney.Pages.TestPage
@{
    ViewData["Title"] = "TestPage";
}

<h1>@ViewData["Title"]</h1>

<div id="message" class="alert alert-primary d-none">

</div>

<button onclick="test()" class="btn btn-primary">Button</button>
   <button type="button" class="btn btn-success m-b-30" data-toggle="modal" data-target="#popupRoleCreate">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Add more
                </button>

                <div class="modal fade" id="popupRoleCreate" tabindex="-1" role="dialog" aria-labelledby="popupRoleCreate"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Create Roles</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form method="post">
        <div class="modal-body">
          <div class="row">
            <div class="col">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <span class="text-danger" ></span>
                <label ></label>
                <input  type="text" name="name" class="form-control">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>

    </div>
  </div>
</div>

<script>
    var message = document.getElementById("message");
    var i = 1;
    async function test() {
        await getData();
    }
    async function getData() {

        fetch('./TestPage?handler=Test&value=fail',
            {
                method: "GET",
    @* body: JSON.stringify(
            {
            name: "myname",
            value: 1,
            date:new Date()
            }
            ), *@
            headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json',

        }
        })
         .then(function (res) { return res.json(); })
        .then(function (data) {          
           if(!data.success){
             message.classList.add("alert-danger"); 
           }
           message.classList.remove("d-none");
            message.innerHTML += `<p> ${i++} ${data.message}</p>`;
           
        });
        }
</script>