@using PersonalMoney;
<div class="modal fade" id="popupRoleDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure to delete the <span id="popup-delete__model-type"></span>  with the value: <span id="popup-delete_model-value"></span></p>
                </div>
                <input name="name"  type="text" hidden value="delete" readonly>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="role_btnDelete" class="btn btn-primary">Delete</button>
                </div>
        </div>
    </div>
</div>