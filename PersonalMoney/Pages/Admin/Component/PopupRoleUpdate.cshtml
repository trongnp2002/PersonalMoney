@using PersonalMoney
@{

}
<div class="modal fade" id="popupRoleUpdate" tabindex="-1" role="dialog" aria-labelledby="popupRoleUpdate"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Update Roles</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form method="post">
        <div class="modal-body">
          <div class="row">
            <div class="col">
              <div class="form-group" id="role_form-update">
                <label>Role Name: </label>
                <input id="role_update_inputRoleName" type="text" class="form-control" >
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" id="role_btnUpdate" class="btn btn-primary">Save changes</button>
        </div>
      </form>

    </div>
  </div>
</div>