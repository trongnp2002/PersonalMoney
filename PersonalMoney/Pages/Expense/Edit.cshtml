@page "/expense/update/{id:int}"
@model PersonalMoney.Pages.Expense.EditModel
@using PersonalMoney.Models
@{
}
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <input type="hidden" id="walletId" name="WalletId" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Expense.Id" />
            <div class="form-group">
                <label class="control-label">Title</label>
                <input asp-for="@Model.Expense.Title" class="form-control" />
                <span asp-validation-for="@Model.Expense.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input asp-for="@Model.Expense.Amount" class="form-control" />
                <span asp-validation-for="@Model.Expense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="SelectedCategoryId" class="form-select">
                    @foreach (var item in Model.Categories)
                    {
                        if (Model.Expense.CategoryId == item.Id)
                        {
                            <option selected value="@item.Id">@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a href="/expense">Back to List</a>
</div>
<script>
    function getWalletId() {
        document.getElementById('walletId').value = localStorage.getItem('walletId');
    }
    getWalletId();
</script>