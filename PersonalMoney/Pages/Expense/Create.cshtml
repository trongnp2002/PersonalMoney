@page "/expense/create"
@model PersonalMoney.Pages.Expense.CreateModel
@{
}
<h3>Create New Expense</h3>
<partial name="_AlertMessage" />

<form method="post">
    <input type="hidden" id="walletId" name="WalletId" />
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="Transaction.Title">
        <span asp-validation-for="@Model.Transaction.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input type="text" class="form-control" name="Transaction.Amount">
        <span asp-validation-for="@Model.Transaction.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
    <select name="SelectedCategoryId" class="form-select">
        @foreach (var item in Model.Categories)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    </div>
    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" name="Transaction.DateOfTransaction">
        <span asp-validation-for="@Model.Transaction.DateOfTransaction class=" text-danger"></span>
    </div>
    <button id="btnAddExpense" type="submit" class="btn btn-primary">Add Expense</button>
    <a href="/expense">Back to List</a>
</form>
<script>
    function getWalletId() {
        document.getElementById('walletId').value = localStorage.getItem('walletId');
    }
    getWalletId();
    $('#btnAddExpense').on('click', getWalletId);

</script>
