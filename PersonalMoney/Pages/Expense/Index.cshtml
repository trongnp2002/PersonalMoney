@page "/expense"
@model PersonalMoney.Pages.Expense.indexModel
@using PersonalMoney.Models
@inject PersonalMoneyContext dbContext
@{
}
<h3 class="title-5 m-b-35">List of expense</h3>
<button class="au-btn au-btn-icon au-btn--green m-3">
    <a style="color: white" href="/expense/create" class="zmdi zmdi-plus">Add Expense</a>
</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Wallet</th>
            <th>Amount Expense</th>
            <th>DateTime</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Transactions)
        {
            <tr>
                <td>@item.Title</td>
                <td>@dbContext.Categories.Find(item.CategoryId).Name</td>
                <td>@dbContext.Wallets.Find(item.WalletId).Name</td>
                <td>@item.Amount</td>
                <td>@item.DateOfTransaction</td>
                <td>
                    <a>Delete</a>
                    <a>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>