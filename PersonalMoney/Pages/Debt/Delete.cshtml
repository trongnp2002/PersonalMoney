@page "/debt/delete/{id:int}"
@model DeleteModel
@using PersonalMoney.Pagesgg

@{
    ViewData["Title"] = "Delete debt";
    var user = ViewData[" debtorId"] as string;
}


<p>Are you sure you want to delete this debt?</p>
<h4>@Model.debt.Id</h4>
<div>
    <form method="post" id="deleteForm">
        <input type="hidden" name="id" value="@Model.debt.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirmDelete();" /> |
    </form>
    <a href="/debtor/details/debt/@user" class="btn btn-primary">Back to List</a>

</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this debt?");
    }
</script>