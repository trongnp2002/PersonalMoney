@model PersonalMoney.Models.User;
@{
    string fullName = $"{Model.FirstName} {Model.LastName}";
}
<div class="modal fade" id="budget_Adjust" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content py-4">
            <div class="modal-header d-flex flex-wrap text-center align-item-center justify-content-center">
                <img width="100px" src="~/images/avatar-budget.png" />
                <p class="h4 m-t-30" style="width:100%">What up's @fullName !</p>
                <p class="h6 m-t-20" style="width:64%; color:#ccc;">
                    Create a budget of how much you want to spend, save and earning goals.
                    Also distribute your budget
                </p>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12" id="set-adjust-body">

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtSpendMonth" class="control-label mb-1" style="font-size:14px;">I want to spend&nbsp;(Monthly)</label>
                            <input id="txtSpendMonth" class="form-control cc-exp" type="number" min="0">
                            <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true">
                                <p style="font-size:12px; color:gray;">Per Month</p>
                            </span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtSpendYear" class="control-label mb-1" style="font-size:14px;">I want to spend&nbsp;(Annually)</label>
                            <input id="txtSpendYear" class="form-control cc-exp readonly" type="number" min="0" readonly>
                            <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true">
                                <p style="font-size:12px; color:gray;">Per Year</p>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtEarnMonth" class="control-label mb-1" style="font-size:14px;">I want to earn&nbsp;(Monthly)</label>
                            <input id="txtEarnMonth" class="form-control cc-exp" type="number" min="0">
                            <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true">
                                <p style="font-size:12px; color:gray;">Per Month</p>
                            </span>
                        </div>
                    </div>
		            <div class="col-6">
                        <div class="form-group">
                            <label for="txtSaveMonth" class="control-label mb-1" style="font-size:14px;">I want to save&nbsp;(Monthly)</label>
                            <input id="txtSaveMonth" class="form-control cc-exp readonly" type="number" min="0" readonly>
                            <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true">
                                <p style="font-size:12px; color:gray;">Per Month</p>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer justify-content-center alignt-item-center">
                <button type="button" class="btn btn-light" data-dismiss="modal">
					<i class="fa fa-times-circle-o" ></i>	
					Cancel
				</button>
                <button id="btnAdjustConfirm" type="button" class="btn btn-success">
					<i class="fa fa-check-circle-o" ></i> 
					Confirm
				</button>
            </div>
        </div>
    </div>
</div>